<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_item_now_showing_film"
    android:layout_width="143dp"
    android:layout_height="283dp"
    android:layout_marginEnd="16dp"
    android:backgroundTint="@color/shadow"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/light_shadow"
    app:cardCornerRadius="0dp"
    app:cardElevation="0dp"
    app:cardMaxElevation="0dp">

    <TextView
        android:id="@+id/tv_item_now_showing_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/transparent"
        android:fontFamily="@font/mulish_extrabold"
        android:text="@string/home_now_showing_film_name"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardview_item_now_showing_corner_poster">

    </TextView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_item_now_showing_corner_poster"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_item_now_showing_poster"
            android:layout_width="143dp"
            android:layout_height="212dp"
            android:importantForAccessibility="no"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/film_1" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_item_now_showing_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/muli_light"
        android:text="@string/home_now_showing_rating"
        android:textColor="@color/rating"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/iv_item_now_showing_star"
        app:layout_constraintTop_toBottomOf="@+id/tv_item_now_showing_name">

    </TextView>

    <ImageView
        android:id="@+id/iv_item_now_showing_star"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_marginTop="10dp"
        android:importantForAccessibility="no"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_item_now_showing_name"
        app:srcCompat="@drawable/star" />

</androidx.constraintlayout.widget.ConstraintLayout>